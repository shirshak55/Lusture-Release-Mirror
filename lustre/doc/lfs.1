            <\fB-E | --component-end comp_end2\fR> [\fBSTRIPE_OPTIONS\fR]
            \fB...\fR
.IR filename
.br
.B lfs mkdir [\fB-c | --count <stripe_count>\fR]
           [\fB-i | --index <mdt_idx>\fR]
           [\fB-h | --hash-type <hash_name>\fR]
           [\fB-m | --mode <mode>\fR]
           [\fB-D | --default\fR]
.IR directory
.br
.B lfs osts
.RB [ path ]
.br
.B lfs mdts
.RB [ path ]
.br
